#include <stdlib.h>
#include <string.h>

long int strtol (const char *nptr, char **endptr, int base)
{
	char c;
	const char *a;
	long int n, s;

	if (nptr == NULL)
		return 0;

	//a = strim(nptr);
	a = nptr;

	if (a[0] == '-') {
		s = -1;
		a = a + 1;
	} else if (a[0] == '+') {
		s = 1;
		a = a + 1;
	} else {
		s = 1;
	}
	
	if (base == 16 && a[0] == '0' && a[1] == 'x')
		a += 2;

	n = 0;
	if (base > 10) {
		for (c = *a++; isxdigit(c); c = *a++) {
			n *= (long int)base;
			if (isdigit(c))
				n += (long int)(c - '0');
			else
				n += (long int)((tolower(c) - 'a') + 10);
		}
	} else {
		for (c = *a++; isdigit(c); c = *a++) {
			n *= (long int)base;
			n += (long int)(c - '0');
		}
	}
	n *= s;
	
	if (endptr)
		*endptr = (char *)(a - 1);

	return n;
}
